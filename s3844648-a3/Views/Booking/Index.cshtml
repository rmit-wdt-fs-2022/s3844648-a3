@model BookingRoomModel

<h1 class="display-4">Book Room</h1>
<form asp-action="Index">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group row">
        <label asp-for="RoomID" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select class="form-select" asp-for="RoomID">

                @foreach (Room room in Model.Rooms)
                {
                    <option value="@room.RoomID">@room.RoomID</option>
                }
            </select>
        </div>
    </div>
    
    <div class="form-group row">
        <label asp-for="StaffID" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select class="form-select" asp-for="StaffID">

                @foreach (Staff staff in Model.Staff)
                {
                    <option value="@staff.StaffID">@staff.StaffID</option>
                }
            </select>
        </div>
    </div>
    
    <div class="form-group row">
        <label asp-for="BookingDate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input  asp-for="BookingDate" value="@DateTime.Today">
            <span asp-validation-for="BookingDate" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Book Room" class="btn btn-primary" />
    </div>
</form>